<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wgj.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.wgj.myapplication.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.wgj.myapplication.DetailActivity"
            android:label="@string/title_detail"
            android:parentActivityName="com.example.wgj.myapplication.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wgj.myapplication.MainActivity" />
        </activity>
        <activity
            android:name="com.example.wgj.myapplication.SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName="com.example.wgj.myapplication.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wgj.myapplication.MainActivity" />
        </activity>

        <provider
            android:name="com.example.wgj.myapplication.data.WeatherProvider"
            android:authorities="com.example.wgj.myapplication"
            android:exported="true"></provider>
    </application>

</manifest>